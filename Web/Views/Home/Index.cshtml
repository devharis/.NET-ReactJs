@using System.Web.Optimization
@model IEnumerable<Web.Models.Comment>
@{
    ViewBag.Title = "Index";
}

@Html.React("CommentBox", new
            {
                initialData = Model,
                url = Url.Action("Comments"),
                submitUrl = Url.Action("AddComment"),
                pollInterval = 2000,
            })

@section scripts
{
    @Scripts.Render("~/bundles/comment")
}